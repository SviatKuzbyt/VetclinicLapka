<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextBasic">
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="TextBold">
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="TextGray">
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
    </style>

    <style name="TextWhite">
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white_light</item>
    </style>

    <style name="ButtonMain">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:textAppearance">@style/TextBasic</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginHorizontal">16dp</item>
    </style>

    <style name="ButtonCreate" parent="android:Widget.Material.Button.Borderless">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/background_create_button</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:textAppearance">@style/TextWhite</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginHorizontal">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <style name="MainActivityTheme" parent="Theme.VetclinicLapka">
        <item name="android:statusBarColor">@color/green</item>
    </style>

    <style name="ConfirmCancelWindow" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="android:windowBackground">@drawable/background_window</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>
</resources>